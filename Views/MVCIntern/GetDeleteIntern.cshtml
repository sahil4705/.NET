@model Core_MVC.Models.InterClass;

<div class="container mt-5">
    <h2 class="text-center">Profile</h2>
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <td rowspan="5" class="text-center">
                    <img src="@Model.c_Topic_Image" alt="Profile Image" class="rounded-circle"
                        style="width: 190px; height: 190px;">
                </td>
                <th>Name</th>
                <td>@Model.c_InternName</td>
            </tr>
            <tr>
                <th>ID</th>
                <td>@Model.c_internid1</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>@Model.c_Gender</td>
            </tr>
            <tr>
                <th>Date of Presentation</th>
                <td>@Model.c_Date_Of_Presentation</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>@Model.c_Status</td>
            </tr>
            <tr>
                <th></th>
                <td>
                    <form asp-action="DeleteIntern" asp-route-id="@Model.c_internid1" method="post">
                        <button type="submit" class="btn btn-danger">Delete Intern</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="text-muted text-center">
        <small>Last updated a few minutes ago</small>
    </div>
</div>
