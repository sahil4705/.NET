@model Core_MVC.Models.BookModel;
@{
    ViewData["Title"] = "getDeleteBook";
}

<h1>DeleteBook</h1>

<div class="container mt-5">
    <h2 class="text-center">Profile</h2>
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td>@Model.b_id</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.b_name</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>@Model.b_author</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>@Model.b_price</td>
            </tr>
            <tr>
                <th></th>
                <td>
                    <form asp-action="DeleteBook" asp-route-id="@Model.b_id" method="post">
                        <button type="submit" class="btn btn-outline-danger">Delete Book</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>

