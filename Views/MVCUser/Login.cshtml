@model Core_MVC.Models.User;

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
@if(TempData["msg"] != null)
{
    <div id="alertMessage" class="alert alert-danger">
        @TempData["msg"]
    </div>
}
@if(TempData["Login_msg"] != null)
{
    <div id="alertMessage" class="alert alert-success   ">
        @TempData["Login_msg"]
    </div>
}
@if(TempData["Reg_msg"] != null)
{
    <div id="alertMessage1" class="alert alert-success">
        @TempData["Reg_msg"]
    </div>
}
<h1>Login</h1>	
<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="exampleInputUsername" asp-for="c_username"></label>
        <input type="text" asp-for="c_username" class="form-control" id="exampleInputUsername" placeholder="Enter Username">
        <span asp-validation-for="c_username" class="text-danger"></span>
    </div>
    
    <br/>
    <div class="form-group">
        <label for="exampleInputPassword1" asp-for="c_password"></label>
        <input type="password" asp-for="c_password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="c_password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <p>Forgot Password ? @Html.ActionLink("Click Here","getEmailForgotPassword","MVCUser")</p>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <p>Create a new account ? @Html.ActionLink("Click Here","Register","MVCUser")</p>
</form>

@section Scripts {
     <script>
        setTimeout(()=>{
            $('#alertMessage').fadeOut('slow');
            $('#alertMessage1').fadeOut('slow');
        },4000);
     </script>
}